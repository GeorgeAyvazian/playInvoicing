GET           /api/taxes/:term                                  controllers.Taxes.find(term: String, fields: String)
PUT           /api/taxes                                        controllers.Taxes.update
POST          /api/taxes                                        controllers.Taxes.create
DELETE        /api/taxes/:id                                    controllers.Taxes.delete(id: Long)

